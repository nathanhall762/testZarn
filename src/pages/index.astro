---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import AboutCard from '../components/AboutCard';
import BulletStatsCard from '../components/BulletStatsCard';
import TextImagecard from '../components/TextImageCard';

import { getData } from '../firebase';
// import ProjectGallery from '../components/ProjectGallery';

const data = await getData('homepage');
const homePageData = data[0];
---

<Layout title='' metaDescription='this is my first astro page'>
  <Hero
    welcomeText={homePageData.hero.hero_title}
    tagline={homePageData.hero.hero_subtitle}
    backgroundImages={homePageData.hero.hero_images}
    slideTime={5000}
    client:load
  />
  <AboutCard
    aboutTitle={homePageData.about.about_title}
    aboutBody={homePageData.about.about_body_text}
    linkText={homePageData.about.about_link_text}
    linkUrl='/commercials'
  />
  <BulletStatsCard
    body={homePageData.stats.bullet_stats}
    title={homePageData.stats.heading}
    bg_image={homePageData.stats.background_image}
    image_alt_text={homePageData.stats.image_alt_text}
  />
  <TextImagecard
    title={homePageData.owner.subheading}
    bodyText={homePageData.owner.body_text}
    imageLink={homePageData.owner.picture}
    imageAltText={homePageData.owner.image_alt_text}
    reversed={true}
  />
</Layout>
