---
import Layout from '../../layouts/Layout.astro';
import AboutCard from '../../components/AboutCard';
// import Sidekick from '../components/Sidekick';
import EuropeanHero from '../../components/LuxuryHero';

import { getData } from '../../firebase';

const aboutData = await getData('about_us');
const homeData = await getData('homepage');
const bgpics = homeData[0].hero.hero_images;
const tulsaPic = aboutData[0].tulsa_pic;

const logoIcons = [
  'simple-icons:bmw',
  'simple-icons:mercedes',
  'simple-icons:audi',
  'simple-icons:volvo',
  'simple-icons:landrover',
  'simple-icons:porsche',
  'simple-icons:jaguar',
  'simple-icons:volkswagen',
];
---

<Layout
  title='page title goes here'
  metaDescription='meta-description goes here'
>
  <EuropeanHero
    welcomeText='Welcome to the home of the best products/services in the world!'
    tagline='We make products/services that you want to buy.'
    backgroundImages={bgpics}
    tulsaPic={tulsaPic}
    slideTime={5000}
    logos={logoIcons}
    client:idle
  />
  <AboutCard
    aboutTitle='page title goes here'
    aboutBody='We are a team of highly skilled professionals who are dedicated to making the best products/services in the world. We have been in business for over 20 years and have worked with some of the biggest brands in the world. Our goal is to create commercials that are not only entertaining, but also effective in driving sales. We take pride in our work and are committed to delivering the highest quality commercials to our clients.'
    linkText='Learn More'
    linkUrl='/'
  />
</Layout>
