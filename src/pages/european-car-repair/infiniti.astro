---
import EuroLayout from '../../layouts/EuroLayout.astro';
import type { DocumentData } from 'firebase/firestore';
import { getData } from '../../firebase';
import EuropeanSidekick from '../../components/EuropeanSidekick';

const data = await getData('pages', 'infiniti');
const pageData: DocumentData = data[0];
---

<EuroLayout
  title={pageData.title}
  metaDescription={pageData.seo_metadata.meta_description}
  pageData={pageData}>
  <EuropeanSidekick
    content={pageData.content[0].value}
    logo='<svg xmlns="http://www.w3.org/2000/svg" width="full" height="full" viewBox="0 0 24 24"><path fill="currentColor" d="M1.953 11.643c0 1.51 1.83 2.69 4.601 3.344l4.841-5.523H12l-4.19 8.06C3.25 16.744 0 14.71 0 12.233c0-3.184 5.376-5.757 12-5.757s12 2.573 12 5.757c0 2.477-3.25 4.511-7.81 5.293L12 9.464h.605l4.84 5.523c2.772-.654 4.601-1.834 4.601-3.344c0-2.664-4.484-4.88-10.047-4.88c-5.562 0-10.046 2.216-10.046 4.88"/></svg>'
  />
</EuroLayout>
