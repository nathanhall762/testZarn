---
// @ts-nocheck
import Header from '../components/shared/Header';
import Footer from '../components/shared/Footer';
import { ViewTransitions } from 'astro:transitions';
import { getData } from '../firebase';
import { navs } from '../navMenu';

export interface Item {
  type: string;
  value: any;
}

interface Props {
  title: string;
  metaDescription: string;
}

const { title, metaDescription } = Astro.props;

const businessInformation = await getData('business_information');
---

<!doctype html>
<html
  lang='en'
  class='scroller dark bg-neutral-9 font-sans font-light text-neutral-9'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content={metaDescription}
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href={businessInformation[0].favicon.favicon_32_x32}
    />
    <title>
      {
        title
          ? `${title} - ${businessInformation[0].business_name}`
          : businessInformation[0].business_name
      }
    </title>
    <ViewTransitions />
    <!-- structed data -->
    <script type='application/ld+json'>
      {
        "@context": "http://schema.org",
        "@type": "AutoRepair",
        "image": "https://firebasestorage.googleapis.com/v0/b/zarn-site.appspot.com/o/88m8g_ZarnLogo.png?alt=media&amp;token=7dc4e3cc-1e25-4e2e-bc1e-2458e053f560",
        "url": "https://zarn-site.web.app/",
        "sameAs": [
          "https://www.instagram.com/nzdiagnostics/?hl=en",
          "https://www.youtube.com/channel/UCUX944rcFj1I2AvTuFL04Aw"
        ],
        "logo": "https://firebasestorage.googleapis.com/v0/b/zarn-site.appspot.com/o/88m8g_ZarnLogo.png?alt=media&amp;token=7dc4e3cc-1e25-4e2e-bc1e-2458e053f560",
        "name": "Zarn Automotive",
        "description": "Zarn Automotive is a locally owned auto repair shop in Broken Arrow, OK, offering expert services for luxury and import vehicles. Our experienced technicians provide comprehensive care, including AC services, battery replacements, and more.",
        "telephone": "(918) 940-7800",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "(918) 940-7800",
          "contactType": "Customer Service"
        },
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "2003 N Yellowood Ave ste f",
          "addressLocality": "Broken Arrow",
          "addressRegion": "OK",
          "postalCode": "74012",
          "addressCountry": "US"
        },
        "openingHours": ["Mo-Sa 09:00-17:00"],
        "hasMap": "https://maps.app.goo.gl/s5gvjEPDHAo22F4y9",
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "36.071981305212354",
          "longitude": "-95.83970962507328"
        },
        "priceRange": "Call for quote",
        "areaServed": [
          {
            "@type": "Place",
            "name": "Broken Arrow"
          },
          {
            "@type": "Place",
            "name": "Tulsa"
          },
          {
            "@type": "Place",
            "name": "Bixby"
          },
          {
            "@type": "Place",
            "name": "Owasso"
          },
          {
            "@type": "Place",
            "name": "Jenks"
          },
          {
            "@type": "Place",
            "name": "Coweta"
          },
          {
            "@type": "Place",
            "name": "Wagoner"
          },
          {
            "@type": "Place",
            "name": "Catoosa"
          }
        ]
      }
    </script>
    <!-- Google tag (gtag.js) -->
    <script
      type='text/partytown'
      async
      src='https://www.googletagmanager.com/gtag/js?id=AW-16682392376'
    ></script>
    <script type='text/partytown'>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'AW-16682392376');
    </script>
    <script type='text/partytown'>
      gtag('config', 'AW-16682392376/x9sACL-B988ZELi25JI-', {
        phone_conversion_number: '(918) 940-7800',
      });
    </script>

    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Bai+Jamjuree:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap'
      rel='stylesheet'
    />
    <!-- Meta Pixel Code -->
    <script is:inline>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = '2.0';
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js'
      );
      // ts-ignore
      fbq('init', '893042419444004');
      // ts-ignore
      fbq('track', 'PageView');
    </script>
    <noscript
      ><img
        height='1'
        width='1'
        style='display:none'
        src='https://www.facebook.com/tr?id=893042419444004&ev=PageView&noscript=1'
      /></noscript
    >
    <!-- End Meta Pixel Code -->
  </head>
  <body>
    <Header
      phone={businessInformation[0].business_phone}
      address={businessInformation[0].business_address}
      addressLink={businessInformation[0].google_maps_link}
      email={businessInformation[0].business_contact_email}
      socials={businessInformation[0].socials}
      navs={navs.filter((nav) => nav.link !== '/')}
      logo={businessInformation[0].business_logo_2}
      client:load
    />
    <main class='bg-black'>
      <slot />
    </main>
    <Footer
      address={businessInformation[0].business_address}
      copyright=`${businessInformation[0].business_name} 2024`
      email={businessInformation[0].business_contact_email}
      navs={[...navs, { link: '/privacy-policy', name: 'Privacy Policy' }]}
      phone={businessInformation[0].business_phone}
      socials={businessInformation[0].socials}
    />
    <style is:global>
      @tailwind base;

      @media (prefers-color-scheme: light) {
        html {
          color-scheme: dark;
        }
      }

      @layer base {
        @keyframes fadeInUp {
          0% {
            opacity: 0;
            transform: translateY(20vh);
          }
          100% {
            opacity: 1;
            transform: translateY(0);
          }
        }

        ul {
          @apply ms-8 list-disc text-base leading-loose lg:text-lg lg:leading-loose;
        }

        @keyframes slide {
          0% {
            transform: translateX(0);
          }
          100% {
            transform: translateX(-100%);
          }
        }

        .slide-animation {
          animation: slide 60s linear infinite;
        }

        .no-animation {
          animation: none;
        }

        .markdown > p {
          @apply mb-8;
        }

        .markdown > p > a,
        .markdown > ul > li > a {
          @apply text-primary-md2 hover:text-primary-md3 hover:underline;
        }

        .fade-in-up {
          animation: fadeInUp 0.75s ease-out;
        }
        .card-zoom {
          @apply relative overflow-hidden;
        }
        .card-zoom-image {
          @apply absolute h-full w-full transform bg-cover bg-center transition-all duration-500 ease-in-out;
        }
        .card-zoom-text {
          @apply absolute transform transition-all duration-500 ease-in-out;
        }
        .zoom-in {
          @apply scale-[1.25];
        }
      }

      .scroller {
        scrollbar-color: hsl(0, 100%, 25%) hsl(240, 5%, 8%);
      }

      .scroller-sm {
        scrollbar-color: hsl(240, 5%, 46%) hsl(240, 5%, 8%);
        scrollbar-width: thin;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      .no-scrollbar {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }

      :root {
        overflow-x: hidden;
      }

      body {
        @apply text-neutral-9 dark:text-neutral-1;
        background: url('/public/ZarnTexture.webp') no-repeat center center
          fixed;
        background-size: cover;
        overflow: hidden !important;
      }

      a {
        @apply transition-transform duration-fast ease-in-out;
      }

      a:hover {
        @apply scale-md;
      }

      strong {
        font-weight: bold;
      }

      h1 {
        @apply font-heading text-3xl font-semibold lg:text-4xl;
      }

      h2 {
        @apply font-heading text-2xl font-semibold lg:text-3xl;
      }

      h3 {
        @apply font-heading text-xl font-semibold lg:text-2xl;
      }

      h4 {
        @apply text-lg font-semibold lg:text-xl;
      }

      h5 {
        @apply text-base font-semibold lg:text-lg;
      }

      h6 {
        @apply text-base font-semibold lg:text-lg;
      }

      p {
        @apply text-base leading-loose lg:text-xl lg:leading-loose;
      }

      ul {
        @apply list-[square] marker:text-primary-md2;
      }

      li {
        @apply text-base leading-loose lg:text-xl lg:leading-loose;
      }
    </style>
  </body><!-- custom animation keyframes and other global stuffs -->
</html>
